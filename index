// التبديل بين الصفحات البسيطة
const pages = document.querySelectorAll("[data-page]");
const btnGoToLogin = document.getElementById("btnGoToLogin");
const btnGoToRegister = document.getElementById("btnGoToRegister");
const backToLandingFromLogin = document.getElementById("backToLandingFromLogin");
const backToLandingFromRegister = document.getElementById("backToLandingFromRegister");
const btnStartNow = document.getElementById("btnStartNow");
const btnLearnMore = document.getElementById("btnLearnMore");
const languageSelect = document.getElementById("languageSelect");

function showPage(name) {
  pages.forEach((section) => {
    const pageName = section.getAttribute("data-page");
    section.classList.toggle("hidden", pageName !== name);
  });
}

if (btnGoToLogin) {
  btnGoToLogin.addEventListener("click", () => showPage("login"));
}

if (btnGoToRegister) {
  btnGoToRegister.addEventListener("click", () => showPage("register"));
}

if (backToLandingFromLogin) {
  backToLandingFromLogin.addEventListener("click", () => showPage("landing"));
}

if (backToLandingFromRegister) {
  backToLandingFromRegister.addEventListener("click", () => showPage("landing"));
}

if (btnStartNow) {
  btnStartNow.addEventListener("click", () => showPage("register"));
}

if (btnLearnMore) {
  btnLearnMore.addEventListener("click", () => {
    alert("هنا ستكون صفحة (قراءة المزيد) لاحقًا داخل mony.");
  });
}

// تبديل اللغة (مبدئي – واجهة فقط)
if (languageSelect) {
  languageSelect.addEventListener("change", (e) => {
    const lang = e.target.value;
    console.log("Language changed to:", lang);
    // لاحقًا نربطها بنسخ حقيقية متعددة اللغات
  });
}
